# ============================================
# Agentic Monorepo - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local to source control.

# ---- Supabase ----
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ---- Firebase (optional, for Firestore) ----
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# ---- Solana ----
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# SERVER-SIDE ONLY: Never expose this in client code
SOLANA_PRIVATE_KEY=your-solana-private-key-base58

# ---- Helius ----
NEXT_PUBLIC_HELIUS_API_KEY=your-helius-api-key
HELIUS_API_KEY=your-helius-api-key

# ---- Jupiter ----
NEXT_PUBLIC_JUPITER_API_URL=https://quote-api.jup.ag/v6

# ---- CoinGecko ----
COINGECKO_API_KEY=your-coingecko-pro-api-key

# ---- Pyth ----
NEXT_PUBLIC_PYTH_NETWORK=mainnet-beta

# ---- OpenAI ----
# SERVER-SIDE ONLY: Never expose this in client code
OPENAI_API_KEY=your-openai-api-key

# ---- WalletConnect (v2 only) ----
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# ---- PumpPortal ----
PUMPPORTAL_API_KEY=your-pumpportal-api-key

# ---- deBridge ----
DEBRIDGE_API_KEY=your-debridge-api-key

# ---- 3.Land ----
THREELAND_API_KEY=your-3land-api-key

# ---- Light Protocol ----
LIGHT_PROTOCOL_RPC=your-light-protocol-rpc

# ---- App Configuration ----
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ---- NFT Gating ----
# Collection mint address for NFT-gated features
NFT_COLLECTION_MINT=your-nft-collection-mint-address
